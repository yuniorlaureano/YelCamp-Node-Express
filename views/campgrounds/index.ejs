<%include ../partials/header%>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>This is the campground page</h1>
                <p>Vew aour and-picked compgrounds</p>
                <a href="/campgrounds/new" class="btn btn-primary btn-large">NEW</a>
            </div>
        </header>
        <div class="row">
            <div class="col-ls-12">
                <h3>Our Most Popular Compground!</h3>
            </div>
        </div>

        <div class="row" style="display: flex; flex-wrap: wrap;">
            <%campgrounds.forEach(function(camp){%>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%=camp.image%>" />
                        <div class="caption">
                            <h4>
                                <%=camp.name%>
                            </h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">More</a>
                        </p>
                    </div>
                </div>
                <%});%>
        </div>

    </div>

    <%include ../partials/footer%>