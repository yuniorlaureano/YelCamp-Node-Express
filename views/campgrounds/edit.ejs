<%include ../partials/header%>

    <div class="container">
        <div class="row">
            <h1 style="text-align:center;">Edit
                <%=campground.name%>
            </h1>
            <div style="width: 38%; margin: 0 auto;">
                <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="campground[name]" placeholder="name" value="<%=campground.name%>" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="campground[image]" placeholder="image" value="<%=campground.image%>" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="campground[description]" placeholder="description" value="<%=campground.description%>" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-default btn-block" value="Guardar" />
                    </div>

                </form>
            </div>
        </div>
    </div>
    <a href="/campgrounds/<%=campground._id%>">BACK</a>
    <%include ../partials/footer%>