<%include ../partials/header%>
		
	<div class="container">
		<div class="row">
			<h1 style="text-align:center;">Creating a new campground</h1>
			<div style="width: 38%; margin: 0 auto;">
				<form action="/campgrounds" method="POST">
				<div class="form-group">
						<input type="text" class="form-control" name="name" placeholder="name"/>
				</div>
				<div class="form-group">
						<input type="text" class="form-control" name="image" placeholder="image"/>
				</div>
				<div class="form-group">
						<input type="text" class="form-control" name="description" placeholder="description"/>
				</div>
				<div class="form-group">
						<input type="submit" class="btn btn-default btn-block" value="Guardar"/>
				</div>
				
			</form>
			</div>
		</div>
	</div>
	<a href="/campgrounds">BACK</a>
<%include ../partials/footer%>